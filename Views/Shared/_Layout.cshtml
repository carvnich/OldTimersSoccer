<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Old Timers Soccer League</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OldTimersSoccer.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="bg-primary border-bottom">
            <div class="container-fluid">
                <ul class="navbar-nav d-flex flex-row justify-content-end mb-0 py-2">
                    <li class="nav-item px-3 border-end"><i class="bi bi-instagram"></i></li>
                    <li class="nav-item px-3 border-end"><i class="bi bi-twitter-x"></i></li>
                    <li class="nav-item px-3 border-end"><i class="bi bi-youtube"></i></li>
                    <li class="nav-item px-3"><i class="bi bi-facebook"></i></li>
                </ul>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>
    <footer class="border-top position-relative bg-primary" style="line-height: 2rem">
        <div class="d-flex justify-content-center">
            &copy; 2025 - Old Timers Soccer
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>